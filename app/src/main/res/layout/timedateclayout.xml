    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_name6"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
